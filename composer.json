{
  "name": "efureev/php-type-normalizer",
  "description": "Normalize any types",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "types",
    "normalizer"
  ],
  "authors": [
    {
      "name": "Eugene Fureev",
      "homepage": "https://github.com/efureev"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.28",
    "phpstan/phpstan": "^1.10.2",
    "phpstan/phpstan-phpunit": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.4",
    "phpunit/phpunit": "^10.0",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.7.2"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "TypeNormalizer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TypeNormalizer\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    }
  },
  "scripts": {
    "cs-fix": "@php ./vendor/bin/phpcbf",
    "phpcs": "@php ./vendor/bin/phpcs",
    "phpstan": "@php ./vendor/bin/phpstan analyze -c ./phpstan.neon.dist --no-progress --ansi",
    "phpunit": "@php ./vendor/bin/phpunit --no-coverage --testdox --colors=always",
    "phpunit-cover": "@php ./vendor/bin/phpunit --coverage-text",
    "test": [
      "@phpstan",
      "@phpunit"
    ],
    "test-cover": [
      "@phpstan",
      "@phpunit-cover"
    ]
  }
}
